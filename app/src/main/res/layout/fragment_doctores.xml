<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.citas.CitasFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/logologin" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Buen dÃ­a Paciente" />

        <TextView
            android:id="@+id/tv13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seleccione el doctor de tu preferencia" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvDoctores"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        </androidx.recyclerview.widget.RecyclerView>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <RadioGroup
                    android:id="@+id/rg_horas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton android:id="@+id/radio_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="08:00 AM"/>
                    <RadioButton android:id="@+id/radio_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="09:00 AM"/>
                    <RadioButton android:id="@+id/radio_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10:00 AM"/>
                    <RadioButton android:id="@+id/radio_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11:00 AM"/>
                    <RadioButton android:id="@+id/radio_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12:00 M"/>
                    <RadioButton android:id="@+id/radio_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="13:00 PM"/>
                    <RadioButton android:id="@+id/radio_7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="14:00 PM"/>
                    <RadioButton android:id="@+id/radio_8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15:00 PM"/>
                    <RadioButton android:id="@+id/radio_9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="16:00 PM"/>
                    <RadioButton android:id="@+id/radio_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="17:00 PM"/>
                </RadioGroup>
            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REGRESAR"
                android:layout_weight="1"
                android:layout_margin="8dp"/>

            <Button
                android:id="@+id/btnConfirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CONFIRMAR"
                android:layout_weight="1"
                android:layout_margin="8dp"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>